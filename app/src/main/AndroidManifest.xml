<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.joemeehan.esfflechecalculateur3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/esf_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FlecheActivity"
            android:label="@string/title_activity_fleche"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blogspot.joemeehan.esfflechecalculateur3.MainActivity" />
        </activity>
        <activity
            android:name=".ChamoisActivity"
            android:label="@string/title_activity_chamois"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blogspot.joemeehan.esfflechecalculateur3.MainActivity" />
        </activity>
    </application>

</manifest>